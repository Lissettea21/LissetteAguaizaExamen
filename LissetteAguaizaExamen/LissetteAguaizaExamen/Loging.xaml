<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LissetteAguaizaExamen.Loging">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">

            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

            <Label Text="Loging de registro" VerticalOptions="CenterAndExpand" 
                   FontSize="40" TextColor="Black"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>

            <Entry x:Name="txtContraseña" Placeholder="Ingrese su contraseña" 
                   IsPassword="True"/>

            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked" 
                    BackgroundColor="Aquamarine"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>